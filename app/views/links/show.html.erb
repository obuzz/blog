<div class="page-header">
	<h1><a href="<%= @link.url %>"><%= @link.title %></a><br> <small>Submitted by <%= @link.user.email %></small></h1>
</div>

<div class="btn-group">
	<%= link_to 'visit URL', @link.url, class: "btn btn-primary" %>
</div>

<% if @link.user == current_user then %>
<div class="btn-group">
	<%= link_to 'Edit', edit_link_path(@link), class: "btn btn-link" %>
	<%= link_to 'Destroy', @link, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-link" %> 
</div>
<%end%>

<div class="btn-group pull-right">
	<%= link_to like_link_path(@link), method: :put, class: "btn btn-default btn-sm" do %>
	<span class="glyphicon glyphicon-chevron-up"></span>
	Upvote
	<%= @link.get_upvotes.size %> 
	<% end %> 
	<%= link_to dislike_link_path(@link), method: :put, class: "btn btn-default btn-sm" do %>
	<span class="glyphicon glyphicon-chevron-up">
		Downvote
		<%= @link.get_downvotes.size %>
		<% end %>
	</div>